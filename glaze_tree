VIEWS.PY

def glaze(request):

    form = PieceForm(request.POST or None)

    if form.is_valid():
        save_it = form.save(commit=False)
        save_it.save()

    return render_to_response("kk.html",
                                locals(),
                                context_instance=RequestContext(request))
                                
FORMS.PY   

class PieceForm(forms.ModelForm):
    class Meta:
        model = Piece

